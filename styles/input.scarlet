input, textarea, select, button, .button
	ui-element
	font-family inherit
	font-size 1em
	line-height text-line-height
	color text-color
	border none

button, .button
	horizontal
	padding 0.5rem 1rem
	color button-color
	align-items center
	pointer-events all
	height input-height

	:hover,
	&.active
		cursor pointer
		// color button-hover-color
		// background button-hover-background

	:active
		push-effect