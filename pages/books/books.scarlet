.books-header
	text-align center

.books
	horizontal-wrap
	justify-content center

	.book-image
		:hover
			transform scale(1.05)

.book
	margin 1rem

.book-image
	width 256px
	height 256px
	border-radius image-border-radius
	box-shadow medium-shadow
	object-fit cover
	default-transition

.book-image-large
	width 512px
	height 512px