.library-header
	text-align center

.materials
	horizontal-wrap
	justify-content center

	.material-image:hover
		transform scale(1.05)

.material
	margin 1rem

.material-image
	width 256px
	height 256px
	border-radius image-border-radius
	box-shadow medium-shadow
	object-fit cover
	default-transition

.material-image-large
	width 300px
	height 300px

> 550px
	.material-image-large
		width 512px
		height 512px