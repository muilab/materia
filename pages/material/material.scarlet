.material-header
	margin 0.5rem 0
	margin-top 1rem

.material-description
	margin 1rem 0

.material-image-preview
	horizontal
	justify-content center

.material-samples
	horizontal-wrap
	justify-content space-evenly
	margin-bottom 1rem

.material-sample
	margin 1rem

.material-sample-image
	width 256px
	height 256px
	border ui-border
	border-radius image-border-radius
	box-shadow medium-shadow
	object-fit cover
	transform scale(1)
	default-transition

	:hover
		transform scale(1.05)