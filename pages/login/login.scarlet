.login-buttons
	horizontal-wrap
	justify-content center

.login-button
	horizontal
	align-items center
	border-radius ui-border-radius
	padding 0.75rem 1.25rem
	margin 0.5rem
	font-size 1.2rem
	color white
	default-transition

	:hover
		color white

.login-button-google
	background hsl(8, 75%, 43%)

	:hover
		background hsl(8, 75%, 48%)

.login-button-facebook
	background hsl(222, 67%, 42%)

	:hover
		background hsl(222, 67%, 47%)