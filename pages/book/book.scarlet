.book-description
	margin 1rem 0

.book-image-preview
	horizontal
	justify-content center

.book-materials
	horizontal-wrap
	margin-bottom 1rem

.book-material
	display flex
	justify-content center
	align-items center
	width 64px
	height 64px
	margin 0.25rem

	:hover
		.material-image-small
			transform scale(1.05)

.material-image-small
	width 100%
	height 100%
	border-radius image-border-radius
	box-shadow medium-shadow
	object-fit cover
	default-transition